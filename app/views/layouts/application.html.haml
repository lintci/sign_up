!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'LintCI - Sign Up'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'LintCI provides static analysis for teams. Automate the tedious parts of code review in pull requests using your favorite tools for all the languages you use.'}"}
    = favicon_link_tag 'lintci-icon.png', type: 'image/png'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true

    = render 'layouts/tracking'

    = csrf_meta_tags
  %body
    %main{:role => "main"}
      = render 'layouts/messages'

      %header
        .row
          .small-5.small-centered.medium-3.columns
            %h1
              = image_tag('lintci-logo-vert.svg', class: 'logo', alt: 'LintCI')

      = yield

      %footer
        .row
          .small-12.columns
            %p
              &copy; 2014 LintCI

    = javascript_include_tag 'vendor/modernizr'
    = javascript_include_tag 'application'
